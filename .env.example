# OpenAI Configuration
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o  # Use gpt-4o for best quality, or gpt-4o-mini for lower cost
# OPENAI_BASE_URL=https://api.openai.com/v1  # Optional

# Email Configuration
TO_EMAIL=your.email@example.com
FROM_EMAIL=your.gmail@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password  # Get from Google Account settings

# Content Configuration (optional - defaults are comprehensive)
# FEEDS=  # Leave empty to use all 60+ built-in feeds
MAX_ARTICLES=20  # Number of articles in daily digest (15-25 recommended)

# New Features (both enabled by default)
ENABLE_GOOGLE_NEWS=true  # Real-time news from Google News (15-30 min delay)
ENABLE_MOBILE_TLDR=true  # Mobile-friendly quick scan at top of email

# Testing
DRY_RUN=true  # Set to false to actually send emails
HTTP_TIMEOUT=15
